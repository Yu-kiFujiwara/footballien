<div class="container">
  <div class="container-wrapper">
    <div class="rows">

      <h2>プロフィール編集</h2>

      <%= form_for @user, local: true do |f| %>
        <div class="container">
          <div class="rows">
           <div class="col-md-12">
              <div class="field">
              <%= f.label :プロフィール画像 %><br />
                <%= f.file_field :image, autofocus: true %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field">
                <%= f.label :age %><br />
                <%= f.text_field :age, autofocus: true %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field">
                <%= f.label :Location %><br />
                <%= f.select :location, User.locations.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
              </div>
            </div>
         
            <div class="col-lg-12">
              <div class="field">
                <%= f.label :経歴 %><br />
                <%= f.text_area :introduction, rows: 10, autofocus: true %>
              </div>
            </div><br />

            <div class="field">
            <%= f.submit "更新する", class: 'btn btn-primary' %>
            </div>

          </div>
        </div>
      <% end %><br />
      <%= link_to "戻る", posts_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

